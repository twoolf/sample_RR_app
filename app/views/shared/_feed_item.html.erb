<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="food"><%= feed_item.food %></span>
  <span class="amount"><%= feed_item.amount %></span>
  <span class="carbohydrate"><%= feed_item.carbohydrate %></span>
  <span class="sugar"><%= feed_item.sugar %></span>
  <span class="calories"><%= feed_item.calories %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.food %>
  <% end %>
</li>
